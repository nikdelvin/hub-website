---
import LogoHeader from '../components/shared/LogoHeader.astro'
import '../styles/project.css'
interface Props {
    title: string
    description: string
    keywords: string
    url: string
    imageUrl: string
    brand: string
    color?: string
    parent?: string
    iconUrl?: string
}

const { title, description, keywords, url, imageUrl, brand, color, parent, iconUrl } = Astro.props
---

<!doctype html>
<html
    lang="en"
    class="bg-zinc-950"
>
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0"
        />
        <meta
            name="robots"
            content="index, follow"
        />
        <meta
            name="author"
            content="Nikita Stadnik (the@nikdelv.in)"
        />
        <meta
            name="description"
            content={description}
        />
        <meta
            name="keywords"
            content={keywords}
        />
        <meta
            name="theme-color"
            content="#000000"
        />
        <meta
            property="og:title"
            content={title}
        />
        <meta
            property="og:description"
            content={description}
        />
        <meta
            property="og:url"
            content={url}
        />
        <meta
            property="og:image"
            content={imageUrl}
        />
        <meta
            property="og:type"
            content="website"
        />
        <meta
            property="og:site_name"
            content={brand}
        />
        <meta
            name="twitter:card"
            content="summary_large_image"
        />
        <meta
            name="twitter:title"
            content={title}
        />
        <meta
            name="twitter:description"
            content={description}
        />
        <meta
            name="twitter:image"
            content={imageUrl}
        />
        <meta
            name="twitter:site"
            content="@nikdelvin"
        />
        <link
            rel="canonical"
            href={url}
        />
        <link
            rel="icon"
            type="image/svg+xml"
            href={brand === 'Cybergelion' || brand === 'Peppermeet'
                ? `${iconUrl}?v=${Date.now()}`
                : `/favicons${parent}/favicon-${color}.svg?v=${Date.now()}`}
        />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href={brand === 'Cybergelion' || brand === 'Peppermeet'
                ? `${iconUrl}?v=${Date.now()}`
                : `/favicons${parent}/favicon-${color}.svg?v=${Date.now()}`}
        />
        <link
            rel="stylesheet"
            href={`https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700&amp;display=swap`}
        />
        <link
            rel="stylesheet"
            href={`https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&amp;display=swap`}
        />
        {
            brand === 'Cybergelion' && (
                <link
                    rel="stylesheet"
                    href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
                />
            )
        }
        {
            brand === 'Peppermeet' && (
                <link
                    rel="stylesheet"
                    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&display=swap"
                />
            )
        }
        <meta
            name="generator"
            content={Astro.generator}
        />
        <title>{title}</title>
    </head>
    <body
        class="transition-opacity duration-500 ease-in-out"
        style="opacity: 0;"
    >
        <LogoHeader
            brand={brand === 'Cybergelion' || brand === 'Peppermeet' ? brand : 'Taily'}
            color={brand === 'Cybergelion' || brand === 'Peppermeet' ? undefined : color}
        />
        <slot />
    </body>
</html>
<script>
    document.body.style.opacity = '100%'
</script>
<style is:global>
    :root::-webkit-scrollbar {
        display: none !important;
    }
    :root::-webkit-scrollbar-thumb {
        background-color: transparent !important;
    }
    :root::-webkit-scrollbar-track {
        background-color: transparent !important;
    }
    .overflow-x-scroll::-webkit-scrollbar {
        display: none !important;
    }
    .overflow-x-scroll::-webkit-scrollbar-thumb {
        background-color: transparent !important;
    }
    .overflow-x-scroll::-webkit-scrollbar-track {
        background-color: transparent !important;
    }
</style>
